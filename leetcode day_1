// Problem: Maximum Score After Splitting a String
// Link: https://leetcode.com/problems/maximum-score-after-splitting-a-string/

#include <string>
#include <algorithm>
#include <ranges>

class Solution {
public:
    int maxScore(std::string s) {
        int ans = 0;
        int zeros = 0;
        int ones = std::ranges::count(s, '1');

        for (int i = 0; i + 1 < s.size(); ++i) {
            if (s[i] == '0')
                ++zeros;
            else
                --ones;
            ans = std::max(ans, zeros + ones);
        }
        return ans;
    }
};
